{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
		"EnvironmentShortName":{
		"type": "string"
		}
    },
    "variables": {
	"prefix": "raetgdprtbl", 
	"storageAccounts_name": "[concat(variables('prefix'),(parameters('EnvironmentShortName')))]"
	},
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-04-01",
            "name": "[parameters('storageAccounts_name')]",
            "location": "westeurope",
            "tags": {
                "AppID": "HAS",
                "CostCenter.Id": "571",
                "CostCenter.Name": "CS Cloud Ops"
            },
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "properties": {
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": false,
                "encryption": {
                    "services": {
                        "file": {
                            "enabled": true
                        },
                        "blob": {
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                }
            }
        }
    ]
}
